{
  "name": "desktop",
  "productName": "Acuity Reader",
  "private": true,
  "version": "0.0.0",
  "description": "A local-first reader mode desktop app that turns cluttered web pages into clean, accessible reading views.",
  "author": "Isaac <isaacrdickinson@gmail.com>",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "dev": "concurrently -k \"pnpm dev:renderer\" \"pnpm dev:electron\"",

    "typecheck": "tsc --noEmit",
    "build:renderer": "vite build",
    "build": "pnpm typecheck && pnpm build:renderer && electron-builder",
    "pack": "pnpm typecheck && pnpm build:renderer && electron-builder --dir",
    "dist": "pnpm typecheck && pnpm build:renderer && electron-builder",

    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "30.5.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.<yourname>.acuityreader",
    "productName": "Acuity Reader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": ["nsis"]
    }
  },
  "main": "dist-electron/main.js"
}
